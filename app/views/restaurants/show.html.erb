<div id="<%= dom_id @restaurant %>">
  <p>
    <strong>Name:</strong>
    <%= @restaurant.name %>
  </p>
  <p>
    <strong>Address:</strong>
    <%= @restaurant.address %>
  </p>
  <p>
    <strong>Phone number:</strong>
    <%= @restaurant.phone_number %>
  </p>
  <p>
    <strong>Category:</strong>
    <%= @restaurant.category %>
  </p>
</div>
<div>
  <%= link_to "Back to restaurants", restaurants_path, class: 'btn btn-primary' %> |
  <%= link_to "Create a review", new_restaurant_review_path(@restaurant), class: 'btn btn-success' %> |
</div>

<div class="mt-5">
  <p>Reviews:</p>

  <% @restaurant.reviews.each do |review| %>
    <div class="row">
      <div class="col">
        <%= review.content %>
      </div>
    </div>
    <hr>
  <% end %>
</div>
